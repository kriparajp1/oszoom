{
  "name": "oszoom",
  "version": "1.0.0",
  "description": "Universal OS-specific zoom controller for all frameworks and vanilla HTML",
  "keywords": [
    "zoom",
    "os-detection",
    "windows",
    "macos",
    "linux",
    "android",
    "responsive",
    "css-variables",
    "react",
    "vue",
    "angular",
    "next.js",
    "accessibility"
  ],
  "author": "Kriparaj.p <kripa@synxzautomate.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "require": "./dist/adapters/ReactAdapter.js",
      "import": "./dist/adapters/ReactAdapter.esm.js",
      "types": "./dist/adapters/ReactAdapter.d.ts"
    },
    "./vue": {
      "require": "./dist/adapters/VueAdapter.js",
      "import": "./dist/adapters/VueAdapter.esm.js",
      "types": "./dist/adapters/VueAdapter.d.ts"
    },
    "./angular": {
      "require": "./dist/adapters/AngularAdapter.js",
      "import": "./dist/adapters/AngularAdapter.esm.js",
      "types": "./dist/adapters/AngularAdapter.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/oszoom.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/oszoom/issues"
  },
  "homepage": "https://github.com/yourusername/oszoom#readme",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0",
    "@angular/core": ">=12.0.0",
    "rxjs": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    },
    "rxjs": {
      "optional": true
    }
  }
}

